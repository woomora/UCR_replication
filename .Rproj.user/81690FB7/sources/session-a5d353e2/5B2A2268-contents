  bind_cols(
    foo1 %>% 
      mutate_all(str_remove_all, "\\$") %>% 
      mutate_all(as.numeric) %>% 
      mutate(income = if_else(is.na(V1) & !is.na(V2), V2,
                              #if_else(V2 == max(V2, na.rm = TRUE), V2,
                              rowSums(cbind(V1, V2), na.rm = FALSE)/2),#),
      )%>% 
