  vnz %>% 
  mutate_at(vars(q10new_12, q10new_14), as.character) %>% 
  mutate_at(vars(q10new_12, q10new_14), str_remove_all, "\\,") %>%
  mutate_at(vars(q10new_12, q10new_14), str_remove_all, "\\.") %>%
  mutate_at(vars(q10new_12, q10new_14), str_replace, "hasta", "\\-") %>%
  mutate_at(vars(q10new_12, q10new_14), str_replace, "y", "\\-") %>%
  mutate_at(vars(q10new_12, q10new_14), str_replace, "\\–", "\\-") %>%
  mutate(income = if_else(wave == 2012, q10new_12, q10new_14),
         income = if_else(str_detect(income, "Más de") == TRUE, str_c("-", income), income),
