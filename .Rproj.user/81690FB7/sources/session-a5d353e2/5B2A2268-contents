lapop_sample_pi_wrks <- 
  lapop %>%
  filter(!is.na(colorr)) %>% 
  filter(income > 0) %>% 
  filter(!is.na(income)) %>% 
  select(idnum, weight1500b, 
         # Income
         incomeppp, income_not_na, 
         # Continuous measures of skin tone
