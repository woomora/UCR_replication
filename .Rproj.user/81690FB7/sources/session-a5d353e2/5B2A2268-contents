# Speaks the mayoritiarian language ----

lapop_identity <- tibble()

for (i in levels(factor(lapop$countrycode))) {
  
  print(i)
  
  foo <- 
    lapop %>% 
    filter(countrycode == i) %>% 
    filter(!is.na(leng1)) %>% 
    group_by(leng1) %>% 
    count() %>% 
    ungroup() %>% 
    arrange(-n) %>% 
    head(1)
  
  if(dim(foo)[1] != 0){
    
    lapop_identity <- 
      lapop_identity %>% 
      bind_rows(
        lapop %>% 
          filter(countrycode == i) %>% 
          mutate(
            lengua = if_else(leng1 == foo$leng1, 1, 0)
          ) %>% 
          select(idobs, countrycode, year,  cluster, lengua)
      )
    
  }
  
}

lapop <- 
  lapop %>% 
  left_join(lapop_identity)


