keywords = {Marginaci{\'{o}}n social,M{\'{e}}xico,Urbanizaci{\'{o}}n,{\'{A}}rea metropolitana de la Ciudad de Guadalajara (Ja,{\'{A}}rea metropolitana de la Ciudad de Monterrey (Nuev,{\'{A}}rea metropolitana de la Ciudad de M{\'{e}}xico},
