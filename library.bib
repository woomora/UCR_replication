author = {Hodges, J. L. and Lehmann, E. L.},
doi = {10.1214/aoms/1177704172},
issn = {0003-4851},
journal = {The Annals of Mathematical Statistics},
month = {jun},
number = {2},
pages = {598--611},
title = {{Estimates of Location Based on Rank Tests}},
volume = {34},
year = {1963}
}
