publisher = {John Wiley {\&} Sons, Ltd},
title = {{Comparing Inference Approaches for RD Designs: A Reexamination of the Effect of Head Start on Child Mortality}},
url = {https://onlinelibrary.wiley.com/doi/full/10.1002/pam.21985 https://onlinelibrary.wiley.com/doi/abs/10.1002/pam.21985 https://onlinelibrary.wiley.com/doi/10.1002/pam.21985},
